<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>teleHealth</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <nav class="navbar navbar-light navbar-expand-md">
        <div class="container-fluid"><a class="navbar-brand" href="/admin">teleHealth | Admin</a>
            <ul class="nav navbar-nav">
                <li class="nav-item" role="presentation"><a class="nav-link active" href="/admin">Home</a></li>
                <li class="nav-item" role="presentation"></li>
                <li class="nav-item" role="presentation"><a class="nav-link" href="/login.html">Logout</a></li>
            </ul><button class="navbar-toggler" data-toggle="collapse"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button></div>
    </nav>
    <div>
        <div class="container">
            <div class="row">
                <div class="col">
                 <h1>Patients</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
    <% patients.forEach(function(patient){ %>
        <div class="col-md-4 col-lg-4 col-sm-12">
            <div class="container">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"><%= patient.names%></h4>
                        <h6 class="text-muted card-subtitle mb-2"><%= patient.dob%></h6>
                        <h6 class="text-muted card-subtitle mb-2"><%= patient.gender%></h6>
                        <h6 class="text-muted card-subtitle mb-2"><%= patient.location%></h6>
                         <h6 class="text-muted card-subtitle mb-2">Active since - <%=patient.createdAt.getDate() + "-" + months[patient.createdAt.getMonth()] + "-"+patient.createdAt.getFullYear() %></h6>
                    </div>
                </div>
            </div>
        </div>
        <% }); %> 
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
</body>

</html>